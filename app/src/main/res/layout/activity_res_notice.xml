<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="match_parent"
    android:layout_marginStart="90dp"
    tools:context=".ResNotice">
    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/white">
        <ImageButton
            android:id="@+id/close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/close"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:id="@+id/notice_middle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/close"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="알림"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/iv_notice"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/noti_fill_red"
                android:layout_toEndOf="@+id/tv_notice"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/sw_notice"
                android:layout_marginEnd="5dp"
                android:text="알림 on/off"
                android:textColor="#B4B4B4"
                android:layout_centerVertical="true"
                />
            <Switch
                android:id="@+id/sw_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:track="@drawable/switch_on"
                android:thumb="@drawable/switch_ball"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:text=""
                android:textOn=""
                android:textOff=""/>
        </RelativeLayout>
        <View
            android:id="@+id/notice_middle_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/notice_middle"
            android:background="#ECEAEA"
            />
        <LinearLayout
            android:id="@+id/notice_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/notice_middle_line"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:textColor="#222222"
                    android:text="광진구에 롬곡 이 생겼어요!"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arl_x" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ECEAEA"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:textColor="#222222"
                    android:text="광진구에 일월십사일 이 생겼어요!"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arl_x" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ECEAEA"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:textColor="#222222"
                    android:text="광진구에 일품화계 가 생겼어요!"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arl_x" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ECEAEA"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:textColor="#222222"
                    android:text="광진구에 소단 이 생겼어요!"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arl_x" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ECEAEA"
                />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>