<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity"
    android:background="@color/btnDisabled">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true">
        <RelativeLayout
            android:id="@+id/rl_setting_topbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/btnAbled">

            <ImageView
                android:id="@+id/iv_setting_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/back"
                android:tint="@color/white"/>
            <TextView
                android:id="@+id/tv_setting_title"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_toEndOf="@+id/iv_setting_back"
                android:layout_marginStart="10dp"
                android:layout_alignBottom="@id/iv_setting_back"
                android:gravity="center_vertical"
                android:text="식당 이름"
                android:textSize="24dp"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/hsv_setting_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_setting_topbar"
            android:background="@color/white"
            android:padding="20dp">
            <LinearLayout
                android:id="@+id/ll_setting_img"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/rl_setting_img"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@color/btnDisabled">
                    <Button
                        android:id="@+id/btn_setting_add_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/addphoto"/>
                </RelativeLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <RelativeLayout
            android:id="@+id/rl_setting_inform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hsv_setting_img"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_setting_inform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기본정보"
                android:textColor="@color/btnAbled"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_emph_res_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_setting_inform"
                android:layout_marginTop="10dp"
                android:text="*"
                android:textColor="@color/btnAbled"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_setting_res_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_emph_res_name"
                android:layout_marginStart="3dp"
                android:layout_alignBottom="@+id/tv_emph_res_name"
                android:text="가게 이름"
                android:textSize="16dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_setting_res_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_emph_res_name"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/tv_setting_res_name"
                android:background="@drawable/edit_setting"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/textBtn"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_emph_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_setting_res_name"
                android:layout_marginTop="10dp"
                android:text="*"
                android:textColor="@color/btnAbled"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_setting_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_emph_category"
                android:layout_marginStart="3dp"
                android:layout_alignBottom="@+id/tv_emph_category"
                android:text="업종"
                android:textSize="16dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_setting_category"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_emph_category"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@id/tv_setting_category"
                android:background="@drawable/edit_setting"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/textBtn"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_emph_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_setting_category"
                android:layout_marginTop="10dp"
                android:text="*"
                android:textColor="@color/btnAbled"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_setting_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_emph_address"
                android:layout_marginStart="3dp"
                android:layout_alignBottom="@+id/tv_emph_address"
                android:text="주소"
                android:textSize="16dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_setting_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_emph_address"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/tv_setting_address"
                android:background="@drawable/edit_setting"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/textBtn"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_emph_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_setting_address"
                android:layout_marginTop="10dp"
                android:text="*"
                android:textColor="@color/btnAbled"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_setting_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_emph_tel"
                android:layout_marginStart="3dp"
                android:layout_alignBottom="@+id/tv_emph_tel"
                android:text="전화번호"
                android:textSize="16dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_setting_tel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_emph_tel"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/tv_setting_tel"
                android:background="@drawable/edit_setting"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/textBtn"
                android:textSize="17dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_setting_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_setting_inform"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_setting_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="편의정보"
                android:textColor="@color/btnAbled"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_emph_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_setting_detail"
                android:layout_marginTop="10dp"
                android:text="*"
                android:textColor="@color/btnAbled"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_setting_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_emph_time"
                android:layout_marginStart="3dp"
                android:layout_alignBottom="@+id/tv_emph_time"
                android:text="영업 시간"
                android:textSize="16dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_setting_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_emph_time"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/tv_setting_time"
                android:background="@drawable/edit_setting"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/textBtn"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_emph_break"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_setting_time"
                android:layout_marginTop="10dp"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_setting_break"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_emph_break"
                android:layout_marginStart="3dp"
                android:layout_alignBottom="@+id/tv_emph_break"
                android:text="브레이크 타임"
                android:textSize="16dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_setting_break"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_emph_break"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/tv_setting_break"
                android:background="@drawable/edit_setting"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/textBtn"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_emph_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_setting_break"
                android:layout_marginTop="10dp"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_setting_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_emph_last"
                android:layout_marginStart="3dp"
                android:layout_alignBottom="@+id/tv_emph_last"
                android:text="라스트 오더"
                android:textSize="16dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_setting_last"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_emph_last"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/tv_setting_last"
                android:background="@drawable/edit_setting"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/textBtn"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_emph_dayoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_setting_last"
                android:layout_marginTop="10dp"
                android:text="*"
                android:textColor="@color/btnAbled"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_setting_dayoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_emph_dayoff"
                android:layout_marginStart="3dp"
                android:layout_alignBottom="@+id/tv_emph_dayoff"
                android:text="휴일"
                android:textSize="16dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_setting_dayoff"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_emph_dayoff"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/tv_setting_dayoff"
                android:background="@drawable/edit_setting"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/textBtn"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_emph_parking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_setting_dayoff"
                android:layout_marginTop="10dp"
                android:text="*"
                android:textColor="@color/btnAbled"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_setting_parking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_emph_parking"
                android:layout_marginStart="3dp"
                android:layout_alignBottom="@+id/tv_emph_parking"
                android:text="주차장"
                android:textSize="16dp"
                android:textColor="@color/black"/>
            <Spinner
                android:id="@+id/sp_setting_parking"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_emph_parking"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@id/tv_setting_parking"
                android:background="@drawable/edit_setting">
            </Spinner>

            <TextView
                android:id="@+id/tv_emph_toilet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_setting_parking"
                android:layout_marginTop="10dp"
                android:text="*"
                android:textColor="@color/btnAbled"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_setting_toilet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_emph_toilet"
                android:layout_marginStart="3dp"
                android:layout_alignBottom="@+id/tv_emph_toilet"
                android:text="화장실"
                android:textSize="16dp"
                android:textColor="@color/black"/>
            <Spinner
                android:id="@+id/sp_setting_toilet"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_emph_toilet"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@id/tv_setting_toilet"
                android:background="@drawable/edit_setting">
            </Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_setting_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_setting_detail"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_setting_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메뉴정보"
                android:textColor="@color/btnAbled"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <HorizontalScrollView
                android:id="@+id/hsv_setting_menu_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_setting_menu"
                android:layout_marginTop="15dp"
                android:background="@color/white">
                <LinearLayout
                    android:id="@+id/ll_setting_menu_img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/rl_setting_menu_img"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@color/btnDisabled">
                        <Button
                            android:id="@+id/btn_setting_add_menu_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/addphoto"/>
                    </RelativeLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_setting_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hsv_setting_menu_img">
            </android.support.v7.widget.RecyclerView>
            <Button
                android:id="@+id/btn_setting_add_menu"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/rv_setting_menu"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/add_menu"
                android:paddingStart="5dp"
                android:drawableStart="@drawable/add_menu_icon"
                android:drawableTint="@color/btnAbled"
                android:text="추가하기"
                android:textStyle="bold"
                android:textColor="@color/btnAbled"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_setting_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_setting_menu"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_setting_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이벤트정보"
                android:textColor="@color/btnAbled"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_setting_event"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_setting_event"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_setting"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/textBtn"
                android:textSize="17dp"
                android:hint="이벤트 내용을 입력해주세요"
                android:textColorHint="@color/textHint"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_setting_apply"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/rl_setting_event"
            android:background="@color/btnAbled"
            android:text="저장하기"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </RelativeLayout>
</ScrollView>