<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    tools:context=".ReslistActivity">
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:background="@drawable/stroke2"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/resimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/restaurant"
            android:scaleType="centerCrop"
            />
       <TextView
           android:id="@+id/restxt1"
           android:layout_width="130dp"
           android:layout_height="wrap_content"
           android:textSize="23dp"
           android:textColor="#000000"
           android:layout_marginTop="15dp"
           android:layout_marginLeft="10dp"
           android:textStyle="bold"
           android:layout_toRightOf="@+id/resimg"
           />
        <ImageView
            android:id="@+id/heart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/restxt1"
            android:layout_alignBottom="@+id/resimg"
            android:background="@drawable/heart_fill"
            />
        <TextView
            android:id="@+id/restxt2"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:textSize="13dp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_toRightOf="@+id/heart"
            android:layout_alignTop="@+id/heart"
            />
        <ImageView
            android:id="@+id/txt"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/heart"
            android:layout_toRightOf="@+id/restxt2"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:src="@drawable/text_blank"
            />
        <TextView
            android:id="@+id/restxt3"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:textSize="13dp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_alignTop="@+id/heart"
            android:layout_toRightOf="@+id/txt"
            />

        <TextView
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#696969"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/restxt4"
            android:layout_marginTop="15dp"
            android:text="â˜…"
            />
        <TextView
            android:id="@+id/restxt4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:textColor="#696969"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>


</RelativeLayout>