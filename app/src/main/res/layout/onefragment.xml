<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OneFragment"
    android:background="#696969">

    <RelativeLayout
        android:id="@+id/frag1_top"
        android:layout_width="match_parent"
        android:layout_height="60dp">
    <Spinner
        android:id="@+id/spinner"
        android:entries="@array/arr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        />
    <ImageButton
        android:id="@+id/frag1_setting"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/setting_blank"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        />

    <ImageButton
        android:id="@+id/frag1_mapview"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/mapview"
        android:layout_toLeftOf="@+id/frag1_setting"
        android:layout_alignTop="@+id/frag1_setting"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:layout_below="@+id/frag1_mapview"
        android:layout_alignLeft="@+id/frag1_mapview"
        android:textSize="9dp"
        android:textColor="#000000"
        android:text="지도보기"
        />
    </RelativeLayout>

    <!--관심목록바-->
    <LinearLayout
        android:id="@+id/frag1_middle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="0dp"
        android:layout_below="@+id/frag1_top"
        >
        <Button
            android:id="@+id/btn1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:text="관심지역1" />
        <Button
            android:id="@+id/btn2"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/stroke4"
            android:text="관심지역2" />
        <Button
            android:id="@+id/btn3"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/stroke4"
            android:text="관심지역3" />
        <Button
            android:id="@+id/btn4"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/stroke4"
            android:text="졸업식당" />
    </LinearLayout>
    <View
        android:id="@+id/frag1_middle_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000"
        android:layout_below="@+id/frag1_middle"/>

    <!--식당목록-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/frag1_middle_line"
            android:background="#C0C0C0"
            >
        </android.support.v7.widget.RecyclerView>

</RelativeLayout>