<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OneFragment">

    <Spinner
        android:id="@+id/spinner"
        android:entries="@array/arr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />

    <ImageButton
        android:id="@+id/mapview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/mapview"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:layout_below="@+id/mapview"
        android:layout_alignLeft="@+id/mapview"
        android:textSize="12dp"
        android:text="지도보기"
        />

    <!--탑바-->
    <LinearLayout
        android:id="@+id/frag1_top"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="0dp"
        >
        <Button
            android:id="@+id/btn1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:text="관심지역1" />
        <Button
            android:id="@+id/btn2"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/stroke"
            android:text="관심지역2" />
        <Button
            android:id="@+id/btn3"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/stroke"
            android:text="관심지역3" />
        <Button
            android:id="@+id/btn4"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:background="@drawable/stroke"
            android:text="관심지역4" />
    </LinearLayout>

    <!--식당목록-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frag1_top"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/frag1_btn1"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:text="button1"/>
            <Button
                android:id="@+id/frag1_btn2"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:text="button2"/>
            <Button
                android:id="@+id/frag1_btn3"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:text="button3"/>
            <Button
                android:id="@+id/frag1_btn4"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:text="button4"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>