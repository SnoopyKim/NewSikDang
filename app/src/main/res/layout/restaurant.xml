<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Restaurant">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!--상단바-->
        <RelativeLayout
            android:id="@+id/res_top"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            >
            <ImageView
                android:id="@+id/res_top_setting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/setting_blank"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:id="@+id/res_top_map"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/mapview"
                android:layout_toLeftOf="@+id/res_top_setting"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="10dp"
                android:layout_below="@+id/res_top_map"
                android:layout_alignLeft="@+id/res_top_map"
                android:text="지도보기"/>
        </RelativeLayout>
        <View
            android:id="@+id/res_top_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_below="@+id/res_top"/>

        <!--식당이미지-->
        <RelativeLayout
            android:id="@+id/res_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/res_top_line"
            android:background="#FFFFFF">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <LinearLayout
                    android:id="@+id/mygallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/res_img1"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/shop_blank"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#000000"/>
                    <ImageView
                        android:id="@+id/res_img2"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/shop_blank" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#000000"/>
                    <ImageView
                        android:id="@+id/res_img3"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/shop_blank"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#000000"/>
                    <ImageView
                        android:id="@+id/res_img4"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/shop_blank"/>
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
        <View
            android:id="@+id/res_img_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_below="@+id/res_img"/>

        <!--매장 이름(정보)-->
        <RelativeLayout
            android:id="@+id/res_inform"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/res_img_line"
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/res_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toStartOf="@id/res_star_img"
                android:text="매장명"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/res_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/res_name"
                android:layout_toStartOf="@id/res_heart_img"
                android:layout_alignLeft="@+id/res_name"
                android:text="광진구 군자동 세종대학교"/>
            <TextView
                android:id="@+id/res_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/res_address"
                android:layout_alignLeft="@+id/res_name"
                android:text="☎: 02-2625-9050"
                />

            <TextView
                android:id="@+id/res_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="22dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="9.9"/>
            <TextView
                android:id="@+id/res_star_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFD700"
                android:textSize="24dp"
                android:layout_toLeftOf="@+id/res_star"
                android:layout_marginTop="18dp"
                android:text="★"/>
            <TextView
                android:id="@+id/res_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="22dp"
                android:layout_alignLeft="@+id/res_star"
                android:layout_below="@+id/res_star"
                android:layout_marginTop="5dp"
                android:text="17"/>
            <TextView
                android:id="@+id/res_heart_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="22dp"
                android:layout_toLeftOf="@+id/res_heart"
                android:layout_below="@+id/res_star_img"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:text="♥"/>

            <TextView
                android:id="@+id/res_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="22dp"
                android:layout_alignLeft="@+id/res_star"
                android:layout_below="@+id/res_heart"
                android:layout_marginTop="5dp"
                android:text="6"/>
            <TextView
                android:id="@+id/res_review_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696969	"
                android:textSize="22dp"
                android:layout_toLeftOf="@+id/res_review"
                android:layout_below="@+id/res_heart_img"
                android:layout_marginTop="5dp"
                android:layout_marginRight="7dp"
                android:text="☞"/>
        </RelativeLayout>
        <View
            android:id="@+id/res_name_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_below="@+id/res_inform"/>

        <!--매장상세정보-->
        <RelativeLayout
            android:id="@+id/res_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/res_name_line"
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/res_detail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696969	"
                android:textSize="40dp"
                android:layout_centerInParent="true"
                android:text="매장 상세 정보"/>
        </RelativeLayout>
        <View
            android:id="@+id/res_detail_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_below="@+id/res_detail"/>

        <!--리뷰-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/res_detail_line"
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/res_review1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#696969	"
                android:textSize="40dp"
                android:layout_centerInParent="true"
                android:text="리뷰"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>