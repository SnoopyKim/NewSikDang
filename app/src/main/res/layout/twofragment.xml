<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TwoFragment">

    <RelativeLayout
        android:id="@+id/frag2_top"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Spinner
            android:id="@+id/spinner"
            android:entries="@array/arr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            />
        <ImageButton
            android:id="@+id/frag1_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/setting_blank"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            />

        <ImageButton
            android:id="@+id/frag1_mapview"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/mapview"
            android:layout_toLeftOf="@+id/frag1_setting"
            android:layout_alignTop="@+id/frag1_setting"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_below="@+id/frag1_mapview"
            android:layout_alignLeft="@+id/frag1_mapview"
            android:textSize="9dp"
            android:textColor="#000000"
            android:text="지도보기"
            />
    </RelativeLayout>

    <!--해시태그-->
    <LinearLayout
        android:id="@+id/frag3_hash"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/frag2_top"
        android:orientation="vertical">
        <EditText
            android:id="@+id/hash_edit"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:hint="#해시태그 검색(분위기, 특징)" />
    </LinearLayout>
    <View
        android:id="@+id/frag3_hash_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000"
        android:layout_below="@+id/frag3_hash"/>


</RelativeLayout>